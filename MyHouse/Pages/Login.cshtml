@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Conta - MyHouse</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="top-bar">
        <img src="~/images/myHouseLogo.jpg" alt="Logo" class="top-bar-logo">
    </div>
    <div class="signup-container">
        <form class="signup-form" method="post">
            <h2>Cria Sua Conta</h2>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" required />
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" type="password" required />
            </div>
            <button type="submit" class="btn-signup">Login</button>
            <p class="login-link">Não possui uma conta? <a href="/Cadastro">Cadastre-se</a></p>
        </form>
        @if (Model.Mensagens?.Any() == true) {
            <ul class="validation-messages">
                @foreach (var msg in Model.Mensagens)
                {
                    <li>@msg.Mensagem</li>
                }
            </ul>
        }
    </div>
</body>
</html>
