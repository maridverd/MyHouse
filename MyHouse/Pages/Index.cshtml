@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var mensagem = Request.Query["mensagem"].ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MyHOUSE - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #ccc;
        }
        .sidebar {
            position: fixed;
            left: 0; top: 0;
            width: 200px;
            height: 100%;
            background-color: rgba(228, 222, 210, 0.9);
            padding-top: 20px;
        }
        .logo {
            text-align: center;
            margin-bottom: 30px;
        }
        .logo img {
            width: 150px;
        }
        .menu {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 0 20px;
        }
        .menu button, .menu a {
            background-color: #00a86b;
            color: white;
            border: none;
            padding: 10px 16px;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
            text-align: left;
            transition: background-color 0.3s, transform 0.2s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.15);
            width: 100%;
            text-decoration: none;
            display: block;
        }
        .menu button:hover, .menu a:hover {
            background-color: #007e52;
            transform: translateY(-1px);
        }
        .submenu {
            margin-left: 15px;
            margin-top: 5px;
        }
        .content {
            margin-left: 220px;
            padding: 20px;
            color: #333;
            max-width: 900px;
        }
        .imagem-container img {
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0,0,0,0.3);
        }
        .personalizar-btn {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 20px;
            background-color: #00a86b;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
        }
        .personalizar-btn:hover {
            background-color: #007e52;
        }

        /* === ALERTA DE SUCESSO === */
        .mensagem-sucesso {
            margin-bottom: 20px;
            padding: 10px 15px;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
            border-radius: 5px;
            font-weight: bold;
            position: relative;
        }

        .fechar-alerta {
            position: absolute;
            top: 5px;
            right: 10px;
            background: none;
            border: none;
            font-size: 20px;
            color: #155724;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            <img src="~/images/MyHouseLogo.png" alt="Logo MyHOUSE" />
            <p>By SIConTech</p>
        </div>

        <div class="menu">
            <button onclick="toggleMenu('casas')">
                <i class="fas fa-home" style="margin-right: 8px;"></i> Casas
            </button>
            <div id="casas" style="display:none;">
                <a href="#" onclick="mostrarImagem('casad150.jpeg')">D150</a>
                <a href="#" onclick="mostrarImagem('casad170.jpeg')">D170</a>
                <a href="#" onclick="mostrarImagem('casad190.jpg')">D190</a>
                <a href="#" onclick="mostrarImagem('casad270.jpg')">D270</a>
                <a href="#" onclick="mostrarImagem('casad290.jpg')">D290</a>
            </div>

            <button onclick="toggleMenu('outros')">
                <i class="fas fa-bars" style="margin-right: 8px;"></i> Outros
            </button>
            <div id="outros" style="display:none;">
                <a href="#">Ofertas</a>
                <a href="#">Proprietário</a>
                <a href="#">Conheça a SIConTech</a>
                <a href="#">Institucional</a>
            </div>
        </div>
    </div>

    <div class="content">
        <h2>Bem-vindo ao MyHOUSE!</h2>

        @* === ALERTA DE SUCESSO COM FECHAMENTO === *@
        @if (!string.IsNullOrEmpty(mensagem))
        {
            <div class="mensagem-sucesso" id="mensagemAlerta">
                @mensagem
                <button class="fechar-alerta" onclick="document.getElementById('mensagemAlerta').style.display='none'">×</button>
            </div>
        }

        <p>Mais que uma empresa inovadora, um conceito: casas cheias de tecnologia, estilo e personalidade.</p>

        <div class="imagem-container" id="imagemContainer" style="display:none;">
            <img id="imagemCasa" src="" alt="Imagem da Casa Selecionada" />
            <br />
            <a id="btnPersonalizar" href="#" class="personalizar-btn">Personalizar</a>
        </div>
    </div>

    <script>
        function toggleMenu(id) {
            const el = document.getElementById(id);
            el.style.display = (el.style.display === 'none' || el.style.display === '') ? 'block' : 'none';
        }

        function mostrarImagem(nomeImagem) {
            const imagem = document.getElementById('imagemCasa');
            const container = document.getElementById('imagemContainer');
            const btnPersonalizar = document.getElementById('btnPersonalizar');

            if (imagem && container && btnPersonalizar) {
                imagem.src = `/images/casas/${nomeImagem}`;
                container.style.display = 'block';
                btnPersonalizar.href = `/Personalizar?imagemCasa=/images/casas/${nomeImagem}`;
            }
        }
    </script>

</body>
</html>
