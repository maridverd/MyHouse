@page
@model PersonalizarModel
@{
    ViewData["Title"] = "Personalizar Casa";
    var imagemCasa = "/images/casas/casa"+Request.Query["id"].ToString().ToLower()+".jpeg";
    var id = Request.Query["id"].ToString().ToLower();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MyHOUSE - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #ccc;
        }
        .sidebar {
            position: fixed;
            left: 0; top: 0;
            width: 200px;
            height: 100%;
            background-color: rgba(228, 222, 210, 0.9);
            padding-top: 20px;
            overflow-y: auto;
        }
        .logo {
            text-align: center;
            margin-bottom: 30px;
        }
        .logo img {
            width: 150px;
        }
        .menu {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 0 20px;
        }
        .menu button {
            background-color: #00a86b;
            color: white;
            border: none;
            padding: 10px 16px;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
            text-align: left;
            transition: background-color 0.3s, transform 0.2s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.15);
            width: 100%;
        }
        .menu button:hover {
            background-color: #007e52;
            transform: translateY(-1px);
        }
        .submenu {
            margin-left: 15px;
            margin-top: 5px;
            background: #d9d7d1;
            border-radius: 8px;
            padding: 10px;
        }
        .submenu label {
            display: block;
            margin: 6px 0;
            font-size: 14px;
            cursor: pointer;
        }
        .content {
            margin-left: 220px;
            padding: 20px;
            color: #333;
            max-width: 900px;
        }
        .imagem-container img {
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0,0,0,0.3);
        }
        .btn-salvar {
            margin-top: 20px;
            padding: 12px 30px;
            background-color: #00a86b;
            border: none;
            border-radius: 6px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .btn-salvar:hover {
            background-color: #007e52;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            <img src="~/images/MyHouseLogo.png" alt="Logo MyHOUSE" />
            <p>By SIConTech</p>
        </div>

        <div class="menu">
            <button type="button" onclick="toggleMenu('automacao')">Automacao e Seguranca <i class="fas fa-chevron-down"></i></button>
            <div id="automacao" class="submenu" style="display:none;">
                <label><input type="checkbox" name="personalizacao[Automacao e Seguranca][Alarme]" form="formSalvar" /> Alarme</label>
                <label><input type="checkbox" name="personalizacao[Automacao e Seguranca][Cameras]" form="formSalvar" /> Cameras</label>
                <label><input type="checkbox" name="personalizacao[Automacao e Seguranca][Fechadura Digital]" form="formSalvar" /> Fechadura Digital</label>
            </div>

            <button type="button" onclick="toggleMenu('sanitario')">Sanitario <i class="fas fa-chevron-down"></i></button>
            <div id="sanitario" class="submenu" style="display:none;">
                <label><input type="checkbox" name="personalizacao[Sanitario][Ducha Higienica]" form="formSalvar" /> Ducha Higienica</label>
                <label><input type="checkbox" name="personalizacao[Sanitario][Vaso Inteligente]" form="formSalvar" /> Vaso Inteligente</label>
            </div>

            <button type="button" onclick="toggleMenu('climatizacao')">Climatizacao <i class="fas fa-chevron-down"></i></button>
            <div id="climatizacao" class="submenu" style="display:none;">
                <label><input type="checkbox" name="personalizacao[Climatizacao][Ar-condicionado Split]" form="formSalvar" /> Ar-condicionado Split</label>
                <label><input type="checkbox" name="personalizacao[Climatizacao][Ventilacao Natural]" form="formSalvar" /> Ventilacao Natural</label>
            </div>

            <button type="button" onclick="toggleMenu('acabamentos')">Acabamentos <i class="fas fa-chevron-down"></i></button>
            <div id="acabamentos" class="submenu" style="display:none;">
                <label><input type="checkbox" name="personalizacao[Acabamentos][Piso Vinilico]" form="formSalvar" /> Piso Vinilico</label>
                <label><input type="checkbox" name="personalizacao[Acabamentos][Revestimento 3D]" form="formSalvar" /> Revestimento 3D</label>
                <label><input type="checkbox" name="personalizacao[Acabamentos][Teto Rebaixado]" form="formSalvar" /> Teto Rebaixado</label>
            </div>
        </div>


    </div>

    <div class="content">
        <h2>Personalize sua Casa</h2>

        @if (!string.IsNullOrEmpty(imagemCasa))
        {
            <div class="imagem-container">
                <img src="@imagemCasa" alt="Imagem da Casa Selecionada" />
            </div>
        }
        else
        {
            <p>Nenhuma imagem selecionada.</p>
        }

        <form id="formSalvar" method="post">
            <input type="hidden" name="imagemCasa" value="@imagemCasa" />

            <!-- Aqui ficam os checkboxes de personalização no form -->
            <div style="margin-top: 20px;">
                <button type="submit" class="btn-salvar">Salvar Personalização</button>
            </div>
        </form>
    </div>

    <script>
        function toggleMenu(id) {
            const el = document.getElementById(id);
            el.style.display = (el.style.display === 'none' || el.style.display === '') ? 'block' : 'none';
        }
    </script>

</body>
</html>
